#!/usr/bin/python3
import psutil
import time

##########################################
def process_status(process_name):
    for process in psutil.process_iter(['pid', 'name']):
        if process.info['name'] == process_name:
            return True
    return False

def cp(process_name):
    if process_status(process_name):
        print(process_name + " up")
    else
        print(process_name + " down")


# Example
while True:
    cp("r1")
    cp("r2")
    cp("cam")
    cp("mcp")

    time.sleep(.5)

